<td>
	<%= link_to(book.user) do %>
		<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
	<% end %>
</td>

<td>
	<%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %>
</td>

<td><%= book.body %></td>

<td><% if book.favorited_by?(current_user) %>
		<%= link_to book_favorites_path(book), method: :delete, remote: true do %> 
				<i class="glyphicon glyphicon-heart"><%= book.favorites.count%></i>
		<% end %> 
	
	<% else %>
		<%= link_to book_favorites_path(book), method: :post, remote: true do %> 
				<i class="glyphicon glyphicon-heart-empty"><%= book.favorites.count %></i> 
		<% end %> 
	<% end %>
</td>

<td><p>コメント数 : <%= book.book_comments.count %></p>
</td>